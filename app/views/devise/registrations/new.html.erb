<body>
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Sign In</h5>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "form-signin") do |f| %>
              <div class="form-label-group">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true, id: "inputEmail" %>
                <label for="inputEmail">Email address</label>
              </div>
              <div class="form-label-group">
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control", id: "inputPassword", required: true %>
                <label for="inputPassword">Password</label>
              </div>
              <div class="form-label-group">
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control", id: "confirmPassword", required: true %>
                <label for="confirmPassword">Password Confirmation</label>
              </div>
              <%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block text-uppercase" %>
              <hr class="my-4">
              <hr class="my-4">
              <%= link_to "Log in", new_user_session_path ,class: "btn btn-facebook btn-block text-uppercase"%>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
